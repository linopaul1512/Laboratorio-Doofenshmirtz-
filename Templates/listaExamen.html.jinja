{% extends 'base.html.jinja' %}



{% block content %}
<h1>{% block title %} Mi lista {% endblock %}</h1>
    

    <table id="formcenter">

        <tr>
            <th>Examen</th>
            <th>Categor√≠a</th>
            <th>Tipo de Muestra </th>
            <th>Precio </th>
            <th>ID Indicacion </th>
        
            
        </tr>
        {% for examen in examenList %}
        <tr>
            <td>{{ examen.IDExamen }}</td>
            <td>{{ examen['IDCategoria'] }} - {{ examen['Nombre'] }}</td> 

{% extends 'headerCRUD.html.jinja' %}

{% block content %}


    <h1 class="titulo"> {% block title %} Modifique un examen {% endblock %}</h1>

   

        <form class method="POST" Content-Type='application/json'>

            <article>

           <div>
                <input   type="hidden"  class="form-control" name="IDExamen" 
                placeholder="IDExamen"
                value="{{ examenes.IDExamen }}">
                <br>
            </div> 

            <div>
                <label for="IDCategoria">Categor√≠as disponibles: </label><br>
                <select id="IDCategoria" name="IDCategoria">
                {% for categoria in categorias %}
                   <option value="{{ categoria.Nombre }}" {% if categoria.Nombre == examenes.IDCategoria %} selected {% endif %}>{{ categoria.Nombre }}</option>
                {% endfor %}
                </select><br>
            </div>
            
            <div>
                <label for="IDIndicacion">Indicaciones disponibles: </label><br>
                <select id="IDIndicacion" name="IDIndicacion">
                {% for indicacion in indicaciones %}
                    <option value="{{ indicacion.Descripcion }}" {% if indicacion.Descripcion == examenes.IDIndicacion %} selected {% endif %}>{{ indicacion.Descripcion }}</option>
                {% endfor %}
                </select><br>
            </div>

            <div>
                <label for="Nombre">Nombre: </label><br>
                <input type="text" class="form-control" name="Nombre" 
                placeholder="Nombre"
                value="{{ examenes.Nombre }}">
                <br>
            </div>

            <div>
                <label for="TipoMuestra">Tipo de Muestra: </label><br>
                <input type="text" class="form-control" name="TipoMuestra" 
                placeholder="TipoMuestra"
                value="{{ examenes.TipoMuestra }}">
                <br>
            </div>
            
            <div>
                <label for="Precio">Precio: </label><br>
                <input type="number" class="form-control" name="Precio" 
                placeholder="Precio"
                value="{{ examenes.Precio }}">
                <br>
            </div>
           
            <input div="formcenter" type="submit" value="Submit">
        </form>
        </article>


{% endblock %}